<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="products_list_view_1" inherit_id="website_sale.products" active="True">
        <xpath expr="." position="replace">
            <t t-call="website.layout">
                <section class="product_categories">
                    <div class="container py-3">
                      <div class="top_categories_headline mb-2">
                        <div class="pc_heading py-3">
                          <h3>Categories</h3>
                          <div class="d-lg-none d-block">
                            <a class="btn " data-bs-toggle="offcanvas" href="#offcanvasProductList" role="button" aria-controls="offcanvasProductList">
                               All Categories
                            </a>
                          </div>
                        </div>
                        <div class="headline_updates">
                          <div class="categorie_h_item">
                            <span class="c_h_icon"><i class="fa fa-mobile" aria-hidden="true"></i>
                            </span><span class="c_h_name">Mobiles</span>
                          </div>
                          <div class="categorie_h_item">
                            <span class="c_h_icon"><i class="fa fa-mobile" aria-hidden="true"></i>
                            </span><span class="c_h_name">Headphones</span>
                          </div>
                        </div>
                      </div>
                      <div class="product_topbar_filter">
                        <div class="product_total_count">
                          <h6>ALL Products</h6>
                          <span class="total_products">
                               - <span class="tatal_product_item">   </span> 
                          </span>
                        </div>
                        <div class="topbar_filter">
                          <div class="tb_pricelist">
                            <h6>Pricelist: </h6><span>USD</span>
                          </div>
                          <div class="tb_shortby">
                            <h6>Short By: </h6><span>Featured</span>
                          </div>
                          <div class="tb_list_grid">
                            <span class="grid_to_list"><i class="fa fa-list" aria-hidden="true"></i>
                            </span><span class="list_to_grid"> <i class="fa fa-th-large" aria-hidden="true"></i></span>
                          </div>
                        </div>
                      </div>
                      <div class="categories_main_section">
                        <aside>
                          <div class="aside_filter d-lg-block d-none">
                            <div class="main_categories">
                              <div class="p_title py-2">
                                Categories
                              </div>
                              <div class="main_categories_radio">
                             
                              </div>
                            </div>
                          </div>
                        </aside>
                        <div class="product_show_container">
                          <div id="productListItems">
                          
                          </div>
                          <div class="row p-3" id="productGridItems">
                          
                          </div>
                        </div>
                      </div>
                    </div>
                  </section>
            </t>
        </xpath>
    </template>
</odoo>